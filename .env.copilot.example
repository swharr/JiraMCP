# Microsoft Copilot Integration Environment Variables
# Copy this file to .env.copilot and fill in your actual values

# =============================================================================
# Jira Configuration (Required)
# =============================================================================

# Your Jira instance URL (without https://)
JIRA_HOST=your-domain.atlassian.net

# Jira user email for API authentication
JIRA_EMAIL=user@company.com

# Jira API token (generate from: https://id.atlassian.com/manage-profile/security/api-tokens)
JIRA_API_TOKEN=your-jira-api-token-here

# Optional: Comma-separated list of project keys to restrict access
# If empty, all accessible projects will be available
JIRA_PROJECT_WHITELIST=PROJ1,PROJ2,PROJ3

# =============================================================================
# Microsoft Bot Framework Configuration (Required)
# =============================================================================

# Bot Application ID from Azure Bot Service
BOT_APP_ID=your-bot-app-id-from-azure

# Bot Application Password/Secret from Azure Bot Service
BOT_APP_PASSWORD=your-bot-app-password-from-azure

# Optional: Azure AD Tenant ID for multi-tenant bots
BOT_TENANT_ID=your-tenant-id

# Port for the Copilot server (default: 3979)
BOT_PORT=3979

# Comma-separated list of enabled commands
BOT_ENABLED_COMMANDS=list_boards,get_closed_items,scaffold_announcement,help

# =============================================================================
# Notification Webhooks (Optional)
# =============================================================================

# Slack webhook URL for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Microsoft Teams webhook URL for notifications
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/TEAMS/WEBHOOK

# =============================================================================
# Performance and Security Configuration
# =============================================================================

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=30

# Request timeout configuration
REQUEST_TIMEOUT_MS=10000
MAX_EXECUTION_TIME_MS=30000

# Cache configuration
CACHE_TTL_MINUTES=15

# =============================================================================
# Environment Configuration
# =============================================================================

# Environment: development, staging, production
NODE_ENV=development

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Health check port (if different from bot port)
HEALTH_CHECK_PORT=3979