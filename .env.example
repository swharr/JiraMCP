# Jira Configuration
JIRA_HOST=your-domain.atlassian.net
JIRA_EMAIL=your-email@example.com
JIRA_API_TOKEN=your-jira-api-token
JIRA_ALLOWED_PROJECTS=PROJ1,PROJ2  # Optional: comma-separated list of allowed project keys

# Notification Configuration (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#jira-updates  # Optional: override webhook default channel

TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/WEBHOOK/URL

# Security Configuration
RATE_LIMIT_MAX_REQUESTS=30  # Optional: max requests per window (default: 30)
RATE_LIMIT_WINDOW_MS=60000  # Optional: rate limit window in ms (default: 60000)

# Health Check Configuration
HEALTH_PORT=3000  # Optional: port for health check endpoints (default: 3000)

# Logging Configuration
LOG_LEVEL=info  # Optional: debug, info, warn, error (default: info)
NODE_ENV=development  # Optional: development, production (default: development)