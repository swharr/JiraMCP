{
  "name": "jira-mcp-server",
  "version": "0.1.0",
  "description": "MCP server for Jira integration that monitors closed items and scaffolds announcements",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "node --watch dist/index.js",
    "start": "node dist/index.js",
    "start:copilot": "node dist/copilot-main.js",
    "dev:copilot": "tsc && node --watch dist/copilot-main.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "test:integration": "echo 'No integration tests defined'",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "axios": "^1.7.2",
    "botbuilder": "^4.21.1",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/jest": "^29.5.14",
    "@types/express": "^4.17.21",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  }
}
